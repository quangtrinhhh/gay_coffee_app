<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.InformationOderActivity">

        <LinearLayout
            android:id="@+id/container_order_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/btnCancel"
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:src="@drawable/close" />

            <TextView
                android:id="@+id/txtNameTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Thông tin đơn hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/boder_top">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Tên bàn"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/name_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách lẻ"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Thời gian"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/4/2024 8:49"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/boder_top">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Trạng thái"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa thanh toán"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Kênh bán"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kênh bán trực tiếp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>