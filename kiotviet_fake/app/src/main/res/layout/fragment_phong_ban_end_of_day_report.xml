<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="LOẠI ĐƠN HÀNG"
        android:textColor="#323232"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ln_isNull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_bao_cao_cuoi_ngay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Tổng"
                android:textColor="#323232"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv.quantityTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_icon_count"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="0"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/tv.totalPriceTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_item_bao_cao_cuoi_ngay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Ngồi tại bàn"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv.quantityProductNgoiTaiBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_icon_count"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="0"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/tv.totalPriceNgoiTaiBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_item_bao_cao_cuoi_ngay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Mang về"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv.quantityProductMangVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_icon_count"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="0 đơn"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/tv.totalPriceMangVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="PHÒNG/BÀN"
            android:textColor="#323232"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv.titleNull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="Danh sách trống ..."
        android:textColor="#323232"
        android:textSize="13dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>